{
  "firestore": {
    "rules": "firebase.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": [
    {
      "target": "dashboard-staging",
      "public": "public/dashboard",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "dashboard-prod",
      "public": "public/dashboard",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "web-staging",
      "public": "public/web",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
	"emulators": {
    	"ui": {
      		"enabled": true,
      		"host": "${FB_EMULATOR_UI_ADDR}",
      		"port": "${FB_EMULATOR_UI_PORT}"
    	},
    	"firestore": {
      		"port": 5555
    	},
    	"functions": {
      		"port": 5001
    	},
    	"hosting": {
      		"port": 5000
    	},
    	"auth": {
      		"port": 9099
    	}
  	}
}
